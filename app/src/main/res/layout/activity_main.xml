<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:icon="@mipmap/ic_launcher"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:id="@+id/in">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="false"
        android:layout_centerInParent="true"
        android:focusable="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/b_nl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="openNLSetting"
            android:text="NLStatus"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/b_as"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:onClick="openASSetting"
            android:text="ASStatus"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手动拆红包"
            android:id="@+id/cb_man"
            android:layout_alignBottom="@+id/linearLayout"
            android:layout_alignEnd="@+id/t_intro"
            android:checked="false"
            android:onClick="setModeMan"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/t_stat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="statistics"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/url"
        android:id="@+id/t_link"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:linksClickable="true"
        android:autoLink="web"
        android:alpha="0.02"
        android:allowUndo="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/intro"
        android:id="@+id/t_intro"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="textStart"/>

</RelativeLayout>
